    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <script>
        function mostrarMensagem(texto, tipo = 'sucesso') {
            const msg = document.getElementById('mensagem-status');
            msg.textContent = texto;
            msg.style.color = tipo === 'sucesso' ? '#90EE90' : '#FFB6C1';
            setTimeout(() => {
                msg.textContent = '';
            }, 3000);
        }

        async function copiarImagemWhatsApp() {
            const lousa = document.querySelector('.lousa');
            const botoes = document.querySelector('.botoes-controle');
            const mensagem = document.getElementById('mensagem-status');
            const giz = document.querySelector('.giz-apagador');
            
            botoes.style.display = 'none';
            mensagem.style.display = 'none';
            giz.style.display = 'none';
            
            try {
                const canvas = await html2canvas(lousa, {
                    backgroundColor: '#2d5016',
                    scale: 2,
                    logging: false,
                    useCORS: true
                });
                
                canvas.toBlob(async (blob) => {
                    try {
                        const item = new ClipboardItem({ 'image/png': blob });
                        await navigator.clipboard.write([item]);
                        mostrarMensagem('‚úÖ Imagem copiada! Cole no WhatsApp (Ctrl+V)', 'sucesso');
                    } catch (err) {
                        const url = canvas.toDataURL('image/png');
                        const link = document.createElement('a');
                        const mes = document.getElementById('mes-ref').value;
                        const semana = document.getElementById('semana-ref').value;
                        link.download = `quadro-vendas-${mes}-${semana}.png`.replace(/\s+/g, '-').toLowerCase();
                        link.href = url;
                        link.click();
                        mostrarMensagem('üì• Imagem baixada! Envie pelo WhatsApp', 'sucesso');
                    }
                });
                
            } catch (erro) {
                mostrarMensagem('‚ùå Erro ao copiar. Tente novamente.', 'erro');
                console.error(erro);
            } finally {
                botoes.style.display = 'flex';
                mensagem.style.display = 'block';
                giz.style.display = 'flex';
            }
        }

        function calcularTotais() {
            const tbody = document.getElementById('tbody-consultores');
            const linhas = tbody.getElementsByTagName('tr');
            
            let totalNovoEntQtd = 0, totalNovoEntRec = 0, totalNovoAtQtd = 0, totalNovoAtRec = 0;
            let totalRenegEntQtd = 0, totalRenegEntRec = 0, totalRenegAtQtd = 0, totalRenegAtRec = 0;
            let totalFibraEntQtd = 0, totalFibraAtQtd = 0;
            let totalTimEntQtd = 0, totalTimAtQtd = 0;

            for (let linha of linhas) {
                const inputs = linha.getElementsByTagName('input');
                
                // Novo + Aditivo - Entrantes
                totalNovoEntQtd += parseInt(inputs[0].value) || 0;
                totalNovoEntRec += parseFloat(inputs[1].value) || 0;
                // Novo + Aditivo - Ativos
                totalNovoAtQtd += parseInt(inputs[2].value) || 0;
                totalNovoAtRec += parseFloat(inputs[3].value) || 0;
                
                // Reneg - Entrantes
                totalRenegEntQtd += parseInt(inputs[4].value) || 0;
                totalRenegEntRec += parseFloat(inputs[5].value) || 0;
                // Reneg - Ativos
                totalRenegAtQtd += parseInt(inputs[6].value) || 0;
                totalRenegAtRec += parseFloat(inputs[7].value) || 0;
                
                // Fibra - Entrantes e Ativos (apenas quantidade)
                totalFibraEntQtd += parseInt(inputs[8].value) || 0;
                totalFibraAtQtd += parseInt(inputs[9].value) || 0;
                
                // TIM Controle - Entrantes e Ativos (apenas quantidade)
                totalTimEntQtd += parseInt(inputs[10].value) || 0;
                totalTimAtQtd += parseInt(inputs[11].value) || 0;
            }

            document.getElementById('total-novo-ent-qtd').value = totalNovoEntQtd;
            document.getElementById('total-novo-ent-rec').value = totalNovoEntRec.toFixed(2);
            document.getElementById('total-novo-at-qtd').value = totalNovoAtQtd;
            document.getElementById('total-novo-at-rec').value = totalNovoAtRec.toFixed(2);
            
            document.getElementById('total-reneg-ent-qtd').value = totalRenegEntQtd;
            document.getElementById('total-reneg-ent-rec').value = totalRenegEntRec.toFixed(2);
            document.getElementById('total-reneg-at-qtd').value = totalRenegAtQtd;
            document.getElementById('total-reneg-at-rec').value = totalRenegAtRec.toFixed(2);
            
            document.getElementById('total-fibra-ent-qtd').value = totalFibraEntQtd;
            document.getElementById('total-fibra-at-qtd').value = totalFibraAtQtd;
            
            document.getElementById('total-tim-ent-qtd').value = totalTimEntQtd;
            document.getElementById('total-tim-at-qtd').value = totalTimAtQtd;
        }

        function adicionarConsultor() {
            const nome = prompt('Digite o nome do novo consultor:');
            if (!nome || nome.trim() === '') return;

            const tbody = document.getElementById('tbody-consultores');
            const novaLinha = document.createElement('tr');
            novaLinha.innerHTML = `
                <td class="consultor-col">${nome.trim()}</td>
                <td><input type="number" value="0" min="0" onchange="calcularTotais()"></td>
                <td><input type="number" value="0" min="0" step="0.01" onchange="calcularTotais()"></td>
                <td><input type="number" value="0" min="0" onchange="calcularTotais()"></td>
                <td><input type="number" value="0" min="0" step="0.01" onchange="calcularTotais()"></td>
                <td><input type="number" value="0" min="0" onchange="calcularTotais()"></td>
                <td><input type="number" value="0" min="0" step="0.01" onchange="calcularTotais()"></td>
                <td><input type="number" value="0" min="0" onchange="calcularTotais()"></td>
                <td><input type="number" value="0" min="0" step="0.01" onchange="calcularTotais()"></td>
                <td><input type="number" value="0" min="0" onchange="calcularTotais()"></td>
                <td><input type="number" value="0" min="0" step="0.01" onchange="calcularTotais()"></td>
                <td><input type="number" value="0" min="0" onchange="calcularTotais()"></td>
                <td><input type="number" value="0" min="0" step="0.01" onchange="calcularTotais()"></td>
                <td><input type="number" value="0" min="0" onchange="calcularTotais()"></td>
                <td><input type="number" value="0" min="0" step="0.01" onchange="calcularTotais()"></td>
            `;
            tbody.appendChild(novaLinha);
            calcularTotais();
        }

        function definirDatasIniciais() {
            const hoje = new Date();
            const diaSemana = hoje.getDay();
            const diferenca = diaSemana === 0 ? -6 : 1 - diaSemana;
            
            const segunda = new Date(hoje);
            segunda.setDate(hoje.getDate() + diferenca);
            
            const domingo = new Date(segunda);
            domingo.setDate(segunda.getDate() + 6);
            
            document.getElementById('data-inicio').valueAsDate = segunda;
            document.getElementById('data-fim').valueAsDate = domingo;
        }

        definirDatasIniciais();
        calcularTotais();
    </script>
</body>
